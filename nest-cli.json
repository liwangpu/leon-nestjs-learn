{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "package": {
      "type": "library",
      "root": "libs/package",
      "entryFile": "index",
      "sourceRoot": "libs/package/src",
      "compilerOptions": {
        "tsConfigPath": "libs/package/tsconfig.lib.json"
      }
    },
    "book": {
      "type": "library",
      "root": "libs/book",
      "entryFile": "index",
      "sourceRoot": "libs/book/src",
      "compilerOptions": {
        "tsConfigPath": "libs/book/tsconfig.lib.json"
      }
    },
    "tenant": {
      "type": "library",
      "root": "libs/tenant",
      "entryFile": "index",
      "sourceRoot": "libs/tenant/src",
      "compilerOptions": {
        "tsConfigPath": "libs/tenant/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}